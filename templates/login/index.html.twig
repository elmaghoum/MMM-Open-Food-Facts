{% extends 'base.html.twig' %}

{% block title %}Connexion - MMM{% endblock %}

{% block main_class %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-green-50 py-12 px-4">
    <div class="max-w-md w-full">
        {# Header avec logo #}
        <div class="text-center mb-8">
            <a href="{{ path('home') }}" class="inline-block group">
                <div class="text-6xl mb-3 text-blue-600 group-hover:scale-110 transition-transform">
                    <i class="bi bi-basket"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 group-hover:text-blue-600 transition">
                    Mieux Manger en Marne
                </h2>
            </a>
            <p class="mt-3 text-gray-600 text-lg">
                Connectez-vous à votre compte
            </p>
        </div>

        {# Carte de connexion #}
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <div class="mb-6">
                <h3 class="text-2xl font-bold text-gray-800 flex items-center">
                    <i class="bi bi-box-arrow-in-right me-2 text-blue-600"></i>
                    Connexion
                </h3>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
            
            {# Email #}
            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-envelope text-gray-400"></i>
                    </div>
                    {{ form_widget(form.email, {'attr': {'class': 'w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition', 'placeholder': 'votre@email.com'}}) }}
                </div>
                {{ form_errors(form.email) }}
            </div>

            {# Password #}
            <div>
                {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-lock text-gray-400"></i>
                    </div>
                    {{ form_widget(form.password, {'attr': {'class': 'w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition', 'placeholder': '••••••••'}}) }}
                </div>
                {{ form_errors(form.password) }}
            </div>

            {# Bouton de soumission #}
            <div class="pt-2">
                {{ form_widget(form.submit) }}
            </div>

            {{ form_end(form) }}

            {# Info 2FA #}
            <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
                <div class="flex items-start">
                    <i class="bi bi-info-circle text-blue-600 text-xl me-2 mt-0.5"></i>
                    <p class="text-sm text-blue-800">
                        Un code de vérification à 6 chiffres sera envoyé à votre adresse email pour sécuriser votre connexion.
                    </p>
                </div>
            </div>
        </div>

        {# Lien retour #}
        <div class="mt-6 text-center">
            <a href="{{ path('home') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-blue-600 transition group">
                <i class="bi bi-arrow-left me-2 group-hover:-translate-x-1 transition-transform"></i>
                Retour à l'accueil
            </a>
        </div>

        {# Compte de test (pour démo) #}
        <div class="mt-8 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
            <div class="text-center">
                <p class="text-sm font-semibold text-yellow-800 mb-2">
                    <i class="bi bi-key me-1"></i>Compte de test (démo)
                </p>
                <div class="text-xs text-yellow-700 space-y-1">
                    <p><strong>Email :</strong> test@mmm.com</p>
                    <p><strong>Mot de passe :</strong> Password123!</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}