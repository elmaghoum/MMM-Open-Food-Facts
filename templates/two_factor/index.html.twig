{% extends 'base.html.twig' %}

{% block title %}Vérification - MMM{% endblock %}

{% block main_class %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-green-50 py-12 px-4">
    <div class="max-w-md w-full">
        {# Header #}
        <div class="text-center mb-8">
            <div class="text-6xl mb-3 text-green-600">
                <i class="bi bi-shield-check"></i>
            </div>
            <h2 class="text-3xl font-bold text-gray-900">
                Vérification en deux étapes
            </h2>
            <p class="mt-3 text-gray-600">
                Entrez le code reçu par email
            </p>
        </div>

        {# Carte 2FA #}
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <div class="mb-6">
                <div class="flex items-center justify-center mb-4">
                    <div class="bg-blue-100 rounded-full p-4">
                        <i class="bi bi-envelope-open text-3xl text-blue-600"></i>
                    </div>
                </div>
                <p class="text-center text-sm text-gray-600">
                    Un code à 6 chiffres a été envoyé à votre adresse email
                </p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div>
                {{ form_label(form.code, 'Code de vérification', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2 text-center'}}) }}
                {{ form_widget(form.code) }}
                {{ form_errors(form.code) }}
                <p class="mt-2 text-xs text-center text-gray-500">
                    <i class="bi bi-clock me-1"></i>
                    Le code expire dans 10 minutes
                </p>
            </div>

            <div class="flex items-center justify-center">
                {{ form_widget(form.submit, {'attr': {'class': 'bg-gradient-to-r from-blue-600 to-green-600 text-white py-3 px-6 rounded-lg font-semibold hover:shadow-lg transition transform hover:scale-105'}}) }}
            </div>

            {{ form_end(form) }}

            {# Info #}
            <div class="mt-4 text-center">
                <p class="text-sm text-gray-500">
                    <i class="bi bi-info-circle me-1"></i>
                    Vérifiez votre boîte email (et spam)
                </p>
            </div>
        </div>

        {# Lien retour #}
        <div class="mt-6 text-center">
            <a href="{{ path('login') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-blue-600 transition group">
                <i class="bi bi-arrow-left me-2 group-hover:-translate-x-1 transition-transform"></i>
                Retour à la connexion
            </a>
        </div>
    </div>
</div>
{% endblock %}