{% extends 'base.html.twig' %}

{% block title %}Vérification - MMM{% endblock %}

{% block main_class %}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-green-50 py-12 px-4">
    <div class="max-w-md w-full">
        {# Header #}
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 text-green-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                    <path d="m9 12 2 2 4-4"/>
                </svg>
            </div>
            <h2 class="text-3xl font-bold text-foreground">
                Vérification en deux étapes
            </h2>
            <p class="mt-3 text-muted-foreground">
                Entrez le code reçu par email
            </p>
        </div>

        {# Carte 2FA - Shadcn Card #}
        {% embed 'components/ui/card.html.twig' %}
            {% block content %}
                <div class="mb-6">
                    <div class="flex items-center justify-center mb-4">
                        <div class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-blue-100 text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="20" height="16" x="2" y="4" rx="2"/>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                            </svg>
                        </div>
                    </div>
                    <p class="text-center text-sm text-muted-foreground">
                        Un code à 6 chiffres a été envoyé à votre adresse email
                    </p>
                </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                <div class="space-y-2">
                    <label class="text-sm font-medium leading-none text-center block">
                        Code de vérification
                    </label>
                    {{ form_widget(form.code, {'attr': {'class': 'flex h-14 w-full rounded-md border border-input bg-background px-3 py-2 text-3xl font-bold tracking-widest text-center ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50', 'placeholder': '000000', 'maxlength': '6'}}) }}
                    {{ form_errors(form.code) }}
                    <p class="mt-2 text-xs text-center text-muted-foreground flex items-center justify-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        Le code expire dans 10 minutes
                    </p>
                </div>

                <div>
                    {{ form_widget(form.submit, {'attr': {'class': 'inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 w-full'}}) }}
                </div>

                {{ form_end(form) }}

                {# Info #}
                <div class="mt-6 p-3 rounded-lg border bg-muted/50">
                    <p class="text-sm text-muted-foreground text-center flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 16v-4"/>
                            <path d="M12 8h.01"/>
                        </svg>
                        Vérifiez votre boîte email (et spam)
                    </p>
                </div>
            {% endblock %}
        {% endembed %}

        {# Lien retour #}
        <div class="mt-6 text-center">
            <a href="{{ path('login') }}" class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-primary transition group">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:-translate-x-1 transition-transform">
                    <path d="m12 19-7-7 7-7"/>
                    <path d="M19 12H5"/>
                </svg>
                Retour à la connexion
            </a>
        </div>
    </div>
</div>
{% endblock %}